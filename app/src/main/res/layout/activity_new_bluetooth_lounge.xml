<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="endee.fried.treasure.NewBluetoothLoungeActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/invitedDeviceListView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:divider="@null"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Ready"
        android:textOn="Ready"
        android:id="@+id/readyToggleButton"
        android:layout_below="@+id/invitedDeviceListView"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pairedDeviceListView"
        android:layout_below="@+id/readyToggleButton"
        android:layout_centerHorizontal="true"
        android:divider="@null"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan"
        android:id="@+id/scanButton"
        android:layout_below="@+id/pairedDeviceListView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/availableDeviceListView"
        android:layout_below="@+id/scanButton"
        android:layout_centerHorizontal="true"
        android:divider="@null"/>


</RelativeLayout>
